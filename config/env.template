# FKmermaid Environment Configuration
# Copy this file to .env and fill in your actual values

# Confluence Integration Settings
# Set CONFLUENCE_ENABLED=true to enable Confluence integration
CONFLUENCE_ENABLED=false

# Confluence Server/Cloud Configuration
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net
CONFLUENCE_USERNAME=your-email@domain.com
CONFLUENCE_API_TOKEN=your-api-token-here

# Confluence Space and Page Configuration
CONFLUENCE_SPACE_KEY=YOUR_SPACE_KEY
CONFLUENCE_PARENT_PAGE_ID=123456

# Optional: Confluence API Settings
CONFLUENCE_API_VERSION=2
CONFLUENCE_TIMEOUT_SECONDS=30
CONFLUENCE_MAX_RETRIES=3

# Optional: Confluence Content Settings
CONFLUENCE_PAGE_TEMPLATE=default
CONFLUENCE_AUTO_PUBLISH=true
CONFLUENCE_VERSION_COMMENT=true

# Optional: Security Settings
CONFLUENCE_SSL_VERIFY=true
CONFLUENCE_PROXY_URL=
CONFLUENCE_PROXY_USERNAME=
CONFLUENCE_PROXY_PASSWORD=